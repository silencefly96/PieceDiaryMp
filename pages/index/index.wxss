/**index.wxss**/
@import '/pages/component/diaryItem/diaryItem.wxss';

page {
  background-color: #F2F2F2;
}

.date {
  border: 1px solid #E5E5E5;
  border-radius: 10rpx;
  padding: 10rpx;
  background-color: white;
  box-sizing: border-box;
  margin: 20rpx 20rpx 5rpx 20rpx;
  z-index: 10;
}

.diary-list{
  background-color: white;
  box-sizing: border-box;
  margin: 5rpx 20rpx 5rpx 20rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
  z-index: -1;
}

.float-button {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 1px solid #1E90FF;
  background-color: white;
  box-sizing: border-box;
  bottom: 50rpx;
  right: 50rpx;
}

.dialog-container {
  margin: 36rpx 36rpx 18rpx 36rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #C4C4C4;
}

.input-title{
  width: 100%;
  box-sizing: border-box;

}