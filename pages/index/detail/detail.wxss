/* pages/index/detail/detail.wxss */

page {
	background-color: #F2F2F2;
	overflow: hidden;
}

.top-container {
	height: 60rpx;
	margin: 10rpx 20rpx 0rpx 20rpx;
	padding: 6rpx;
	box-sizing: border-box;
}

.top-item {
	padding: 6rpx;
	box-sizing: border-box;
	text-align: center;
	border: 2rpx solid #E5E5E5;
	background-color: #FFFFFF;
	border-radius: 10rpx;
}

.text-container {
	border: 2rpx solid #E5E5E5;
	border-radius: 10rpx;
	padding: 20rpx;
	margin: 10rpx 20rpx 10rpx 20rpx;
	background-color: white;
	box-sizing: border-box;
	overflow: scroll;
}

.text {
	width: 100%;
	height: 100%;
}

.button {
	height: 96rpx;
	line-height: 96rpx;
	margin-left: 20rpx;
	margin-right: 20rpx;
	box-sizing: border-box;
	background: #0B7BFB;
	border-radius: 12rpx;
	overflow: hidden;

	font-size: 36rpx;
	color: #FFFFFF;
}